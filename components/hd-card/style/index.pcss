@import "../../styles/vars.pcss";
@import "../../styles/animate.pcss";

.hd-card-wrap {
  border: 1px solid #ccc;
  display: inline-block;
  background: #fff;
  margin:20px;
  padding: var(--padding-md);
  font-size: var(---font-size-base);
  min-width: 300px;
  & .hd-card-title {
    font-size: var(--font-size-md);
    font-weight: bold;
  }
  & .hd-card-cell {
    line-height: 40px;
    &::before,&::after{
      content: '';
      display: table;
    }
    &::after {
      clear: both;
    }
    & .hd-card-cell-title {
      text-align: right;
    }
    
    & .hd-card-cell-value {
    }
  }
  &.hd-card-lg {
    font-size: var(--font-size-md);
    padding: var(--padding-lg);
  }
  &.hd-card-sm {
    font-size: var(--font-size-sm);
    padding: var(--padding-sm);
  }
  &.inline {
    & .hd-card-cell {
      display: inline-block;
      margin-right: 20px;
      & .hd-card-cell-title {
        display: inline-block;
      }
      & .hd-card-cell-value {
        display: inline-block;
      }
    }
  }
}
